<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bachduong.bitwallet.ui2.StatusShowFragment">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/imageView3" android:layout_width="140dp"
            android:layout_height="140dp" android:layout_marginTop="24dp"
            android:src="@drawable/ic_app_logo_icellet_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:gravity="center_horizontal" android:orientation="vertical"
            android:paddingLeft="@dimen/status_padding" android:paddingRight="@dimen/status_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintVertical_bias="0.37">

            <com.bachduong.bitwallet.ui2.customview.AvenirTextView android:id="@+id/text_view_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" android:layout_marginBottom="8dp"
                android:layout_marginEnd="@dimen/activity_pin_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_pin_horizontal_margin"
                android:layout_marginRight="@dimen/activity_pin_horizontal_margin"
                android:layout_marginStart="@dimen/activity_pin_horizontal_margin"
                android:layout_weight="1" android:gravity="center_horizontal"
                android:text="@string/check_seed_confirm_seed"
                android:textAppearance="@style/NormalBoldText" android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <com.bachduong.bitwallet.ui2.customview.AvenirTextView
                android:id="@+id/text_view_content"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/status_padding"
                android:paddingRight="@dimen/status_padding" android:text="@string/check_seed_label_number"
                android:textAlignment="center" android:textColor="@color/white"
                android:textSize="14sp" app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
